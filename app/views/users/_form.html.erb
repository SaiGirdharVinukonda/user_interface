<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row form-group">
    <%= form.label :first_name, style: "display: block", class: "col-sm-2 col-form-label" %>
    <div class='col-sm-5'>
      <%= form.text_field :first_name, class: 'form-control' %>
    </div>
  </div>
  <br />
  <div class="row form-group">
    <%= form.label :last_name, style: "display: block", class: "col-sm-2 col-form-label" %>
    <div class='col-sm-5'>
      <%= form.text_field :last_name, class: 'form-control' %>
    </div>
  </div>
  <br/>
  <div class="row form-group">
    <%= form.label :image, style: "display: block", class: "col-sm-2 col-form-label" %>
    <div class='col-sm-5'>
      <%= form.file_field :image, class: 'form-control'%>
    </div>
  </div>
  <br/>
  <div class="row form-group">
    <%= form.label :role, style: "display: block", class: "col-sm-2 col-form-label" %>
    <div class='col-sm-5'>
      <%= form.select(:role_id, Role.all.collect {|u| [u.name, u.id]}, { prompt: 'Select Role'}, { class: 'form-control' }) %>
    </div>

  <br />
  <div class="form-group">
    <%= form.submit  class: 'btn btn-primary'%>
  </div>
<% end %>

